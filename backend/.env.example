# Backend Environment Variables Template
# Copy this file to `.env` and fill in real values
# DO NOT commit production secrets to Git

# Database Configuration
MONGO_URI=mongodb://localhost:27017/savatsya

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Email Service (SendGrid) - Optional, leave empty to disable
SENDGRID_API_KEY=
FROM_EMAIL=no-reply@example.com
FROM_NAME=Savatsya Gau Samvardhan

# Image Upload (Cloudinary) - Optional, leave empty to disable
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Server Configuration
PORT=5000
NODE_ENV=development

# UPI Configuration for payments
UPI_ID=your-upi-id@provider

# Email Receiving Configuration (SendGrid Inbound Parse)
WEBHOOK_SECRET=your-webhook-verification-secret
INBOUND_EMAIL_DOMAIN=your-domain.com
